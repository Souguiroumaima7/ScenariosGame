<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Status Bar -->

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout6"
            android:layout_width="410dp"
            android:layout_height="291dp"
            android:background="@color/Extraviolet"
            android:padding="40dp"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/username"
            app:layout_constraintEnd_toEndOf="parent">

        <Button
                android:text="@string/save"
                android:layout_width="116dp"
                android:layout_height="73dp"
                android:id="@+id/save"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="299dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="149dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/transparent" />

        <ImageView
                android:layout_width="79dp"
                android:layout_height="79dp"
                app:srcCompat="@mipmap/viewim_photo_foreground"
                android:id="@+id/profile"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="124dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/profile_" />

        <TextView
                android:text="@string/_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profiletext"
                android:layout_marginEnd="136dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/profile"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
            android:layout_width="349dp"
            android:layout_height="53dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextUsername"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="432dp"
            android:background="@color/white"
            tools:ignore="LabelFor,SpeakableTextPresentCheck"
            android:autofillHints="" />

    <TextView
            android:text="@string/username_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextUsername" />

    <TextView
            android:text="@string/email"
            android:layout_width="47dp"
            android:layout_height="32dp"
            android:id="@+id/emailadress"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="388dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            tools:ignore="TextSizeCheck" />

    <EditText
            android:layout_width="352dp"
            android:layout_height="56dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTextEmailAdress"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="324dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            tools:ignore="LabelFor,SpeakableTextPresentCheck"
            android:autofillHints=""
            android:background="@color/white" />

    <TextView
            android:text="@string/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Gender"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="296dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:textColor="@color/black" />

    <EditText
            android:layout_width="351dp"
            android:layout_height="54dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editTextTextMultiLine"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="228dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:background="@color/white"
            tools:ignore="LabelFor,SpeakableTextPresentCheck"
            android:minHeight="48dp"
            android:autofillHints="" />

    <TextView
            android:text="@string/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="188dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="@color/black" />

    <EditText
            android:layout_width="346dp"
            android:layout_height="51dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextPhone"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="124dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:background="@color/white"
            tools:ignore="LabelFor,SpeakableTextPresentCheck"
            android:autofillHints="" />

    <TextView
            android:text="@string/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/State"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="84dp"
            android:textSize="16sp"
            android:textColor="@color/black" />

    <EditText
            android:layout_width="346dp"
            android:layout_height="54dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/CityTextEdit"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            tools:ignore="LabelFor,SpeakableTextPresentCheck"
            android:autofillHints="" />

</androidx.constraintlayout.widget.ConstraintLayout>
