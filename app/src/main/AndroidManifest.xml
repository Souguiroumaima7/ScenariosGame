<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <queries>
        <provider android:authorities="com.facebook.katana.provider.PlatformProvider" /> <!-- allows app to access Facebook app features -->
        <provider android:authorities="com.facebook.orca.provider.PlatformProvider" /> <!-- allows sharing to Messenger app -->
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScenariosGames"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="ScenariosGames"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LogInActivity"
            android:exported="false" android:label="LogIn"
            android:theme="@style/Theme.ScenariosGames" />

        <activity android:name=".SignUpActivity"
            android:exported="false"
            android:label="SignUp"
            android:theme="@style/Theme.ScenariosGames" />

        <activity
            android:name=".CreationGame.DownloadGamesContent"
            android:exported="false"
            android:label="@string/title_activity_download_games_content"
            android:theme="@style/Theme.ScenariosGames" />

        <activity android:name=".CreationGame.ScenariosUpdate"
            android:exported="false"
            android:label="ScenariosUpdate"
            android:theme="@style/Theme.ScenariosGames"/>

        <activity android:name=".CreationGame.CreateScenarios"
            android:exported="false"
            android:label="createScenarios"
            android:theme="@style/Theme.ScenariosGames" />



        <activity android:name="com.example.scenariosapplication.Administration.GestionJeux"
            android:exported="false" android:theme="@style/Theme.ScenariosGames"
            android:label="GestionJeux" />

        <activity android:name="com.example.scenariosapplication.UserInterface.EmailConnection"
            android:label="EmailConnection"
            android:theme="@style/Theme.ScenariosGames" android:exported="false" />

        <activity android:name="com.example.scenariosapplication.UserInterface.FacebookConnection"
            android:exported="false"
            android:theme="@style/Theme.ScenariosGames"
            android:label="FacebookConnection" />

        <activity android:name="com.example.scenariosapplication.Administration.UserManager"
            android:theme="@style/Theme.ScenariosGames"
            android:label="UserManager" android:exported="false" />

        <activity android:name="com.example.scenariosapplication.UserInterface.GoogleConnection"
            android:exported="false"
            android:label="GoogleConnection" android:theme="@style/Theme.ScenariosGames"/>

        <activity android:name="com.example.scenariosapplication.UserInterface.HomeActivity"
            android:exported="false" android:theme="@style/Theme.ScenariosGames"
            android:label="HomeActivity"/>

        <activity
            android:name=".CreationGame.Jeu"
            android:exported="false"
            android:label="@string/title_activity_jeu"
            android:theme="@style/Theme.ScenariosGames" />

        <activity android:name="com.example.scenariosapplication.UserInterface.DetailsJeu"
            android:label="DetailsJeux"
            android:theme="@style/Theme.ScenariosGames"
            android:exported="false" />


        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
    </application>

</manifest>